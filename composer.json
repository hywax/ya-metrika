{
  "name": "hywax/ya-metrika",
  "description": "Yandex Metrika API Library",
  "homepage": "https://github.com/axp-dev/ya-metrika",
  "keywords": ["yandex", "metrika", "api"],
  "license": "MIT",
  "authors": [
    {
      "name": "Hywax",
      "email": "me@hywax.space",
      "homepage": "https://hywax.space"
    }
  ],
  "scripts": {
    "lint": "composer run lint:phpstan && composer run lint:phpcs",
    "lint:phpstan": "phpstan",
    "lint:phpcs": "phpcs .",
    "lint:fix": "phpcbf ."
  },
  "require": {
    "php": "^8.1",
    "monolog/monolog": "^3.5.0",
    "guzzlehttp/guzzle": "^7.8.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10.66",
    "squizlabs/php_codesniffer": "^3.9.1"
  },
  "autoload": {
    "psr-4": {
      "Hywax\\YaMetrika\\": "src"
    }
  },
  "minimum-stability": "dev"
}